<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="57dp"
    tools:layout_editor_absoluteY="169dp">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Scoretw">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="101dp"
            android:layout_height="179dp"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@drawable/ball"
            tools:ignore="MissingConstraints"
            android:onClick="increaseScore"/>
    </GridLayout>

    <TextView
        android:id="@+id/timertw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Time : 15"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Scoretw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="Score : 10"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/timertw"
        app:layout_constraintTop_toBottomOf="@+id/timertw" />

</androidx.constraintlayout.widget.ConstraintLayout>